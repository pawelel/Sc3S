<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudTextField T="string" @bind-Value="_plantUpdate.Name"  Immediate="true" Label="Nazwa Zakładu" Required="true"/>
            <MudTextField T="string" @bind-Value="_plantUpdate.Description" Immediate="true" Label="Opis Zakładu"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Warning" OnClick="Cancel">Anuluj</MudButton>
        <MudButton Variant="Variant.Outlined" Size="Size.Small" StartIcon="@Icons.Material.Filled.Save" Color="Color.Success" OnClick="HandleSave">Zapisz</MudButton>
    </DialogActions>
</MudDialog>